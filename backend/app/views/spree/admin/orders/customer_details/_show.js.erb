<script type='text/template' id='customer_details_template'>
  <div id="select-customer" data-hook>
    <fieldset class="no-border-bottom">
      <legend align="center"><%= Spree.t(:customer_search) %></legend>
      <%= hidden_field_tag :customer_search,  nil, :class => 'fullwidth title' %>
    </fieldset>
  </div>
  <fieldset data-hook="admin_customer_detail_form_fields" class="no-border-top">

    <fieldset class="index no-border-bottom" data-hook="customer_guest">
      <legend align="center"><%= Spree.t(:account) %></legend>
      <div data-hook="customer_fields" class="row">
        <div class="alpha eight columns">
          <div class="field">
            <label for='order_email'><%= Spree.t(:email) %></label>
            <input type='email' name='order[email]' id='order_email' class='fullwidth'>
          </div>
        </div>
        <div class="omega four columns">
          <div class="field">
            <label><%= Spree.t(:guest_checkout) %></label>
            <ul>
              <%% if (order.completed_at) { %>
                <li>
                <%%= order.get('user_id') %>
                </li>
              <%% } else { %>
                <%% guest = !!order.user_id %>
                <li>
                  <input type='radio' id='guest_checkout_true' name='guest_checkout' value='true'>
                  <label for='guest_checkout_true'>Yes</label>
                </li>
                <li>
                  <input type='radio' id='guest_checkout_false' name='guest_checkout' value='false'>
                  <label for='guest_checkout_true'>No</label>
                </li>
                <input type='hidden' name='user_id' id='user_id' value='<%%= order.user_id %>'>
              <%% } %>
            </ul>
          </div>
        </div>
    </fieldset>
  </fieldset>
</script>